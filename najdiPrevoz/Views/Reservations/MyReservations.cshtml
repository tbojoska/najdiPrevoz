@model IEnumerable<najdiPrevoz.Models.Reservation>

@{
    ViewBag.Title = "Reservations";
}


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<title>NajdiPrevoz.mk - Сите патувања</title>
<section id="One" class="wrapper style3">
    <div class="inner">
        <header class="align-center">
            <p>Листа на сите Ваши</p>
            <h2>Резервации</h2>
        </header>
    </div>
</section>

<section id="two" class="wrapper style2">
    <div class="inner">
        <div class="box">
            <div class="content">
                <header class="align-center">
                    <p>Преглед на резервациите: </p>
                </header>
                <br />

                <div class="table-wrapper">
                    <table class="tabela" id="dataTable">

                        <thead class="align-center" style="background-color:#8a4680">
                        <th class="align-center">
                            <strong style="color:white">Возач</strong>
                        </th>
                        <th class="align-center">
                            <strong style="color:white">Почетна дестинација</strong>
                        </th>
                        <th class="align-center">
                            <strong style="color:white">Крајна дестинација</strong>
                        </th>
                        <th class="align-center">
                            <strong style="color:white">Датум</strong>
                        </th>
                        <th class="align-center">
                            <strong style="color:white">Време</strong>
                        </th>
                                          
                        <th class="align-center">
                            <strong style="color:white">Цена по патник</strong>
                        </th>
                        <th></th>
                        <th></th>
                        
                        </thead>

                        <tbody class="align-center">
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Creator)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FromDestination)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ToDestination)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Time)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeHourMin)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)

                                </td>
                                <td>
                                    <a href="@Url.Action("Like", "Reservations",new { id = item.Id })" style="text-decoration:none; color:black;">Like</a>
                                    

                                </td>

                                <td>



                                    <a href="@Url.Action("Details", "Reservations", new { id = item.Id })" style="text-decoration:none; color:black;">Details</a>





                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>



</section>



<style>
    .content {
        width: 1400;
        margin: auto;
    }
	.tabela {
	    color: black;
    }
</style>

