@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/Content/main.css" />
    

</head>
<style>
    table, th, td {
        font-size:medium
    }

    .remove {
        text-decoration: none;
        color: #808080;
    }

    .links {
        list-style-type: none;
        font-size: 15px;
        font-family: Arial;
        
    }
    .hover #action:hover {
        color:white!important;
    }

    .hover1:hover {
        color: white !important;
    }

    .remove:hover{
        color:white;
    }

	.photo {
		margin-left: 35%;
		position: center;
	}

	.logoto {
		margin: 0 auto;
		width:auto;
        height: 100%;
	}

	html, body {
		margin-right: 0;
		margin-left: 0;
        width: 100% !important;
	}

</style>
<body>
    <!-- Header -->
    <header id="header" class="alt">
        <div class="logo"><a href="@Url.Action("Index", "Home")"><img src="~/imgs/logo3.png" class="logoto" /></a></div>
        <a class="meni" href="#menu">Menu</a>
    </header>

    <!-- Nav -->
    <nav id="menu">


        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()

        <ul class="links">
            <li><img src="@Url.Action("UserPhotos", "Home" )" height="60" width="60"  /></li>
            <hr />
            <li class="hover">@Html.ActionLink("МОЈ ПРОФИЛ", "Index", "Manage", routeValues: null, htmlAttributes: new { id = "action", style = "text-decoration:none; color:#808080; " })</li>
            <hr />
            <li class="hover">@Html.ActionLink("СИТЕ ПАТУВАЊА", "Index", "Trips", routeValues: null, htmlAttributes: new { id = "action", style = "text-decoration:none; color:#808080;" })</li>
            <hr />
            <li class="hover">@Html.ActionLink("МОИ ПАТУВАЊА", "MyTrips", "Home", routeValues: null, htmlAttributes: new { id = "action", style = "text-decoration:none; color:#808080;" })</li>
            <hr />
            <li class="hover">@Html.ActionLink("МОИ РЕЗЕРВАЦИИ", "MyReservations", "Reservations", routeValues: null, htmlAttributes: new { id = "action", style = "text-decoration:none; color:#808080;" })</li>
            <hr />
            <li class="hover">@Html.ActionLink("ЗА НАС", "About", "Home", routeValues: null, htmlAttributes: new { id = "action", style = "text-decoration:none; color:#808080;" })</li>
            <hr />
            <li class="hover">@Html.ActionLink("КОНТАКТ", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "action", style = "text-decoration:none; color:#808080;" })</li>
            <hr />

            <li class="hover1"><a class="remove" href="javascript:document.getElementById('logoutForm').submit()">ОДЈАВИ СЕ</a></li>
        </ul>
            }
        }
        else
        {
            <ul class="links">
                <li><a href="@Url.Action("About", "Home")">За нас</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Контакт</a></li>
                <li><a href="@Url.Action("Index", "Trips")">Сите патувања</a></li>
                <!--<li><a href="@Url.Action("MyTrips", "Home")">Мои патувања</a></li>-->
                <li>@Html.ActionLink("Регистрирај се", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Најави се", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
            </ul>
        }
    </nav>


    @RenderBody()

    <footer id="footer">

        <table class="container">

            <tr>
                <td>
                    ПРАТЕТЕ НИ ПОРАКА
                </td>
                <td>
                    СЛЕДЕТЕ НЕ`
                </td>
            </tr>

            <tr>
                <td>
                    <a href="~/Home/Contact" class="icon fa-envelope-o"><span class="label">Email</span></a> info@najdiprevoz.mk
                </td>
                <td>
                    <ul class="icons">
                        <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                        <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                        <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                    </ul>
                </td>
            </tr>

        </table>

